<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateNoteActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editNoteHeading"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Yorum GÃ¼ncelle"
        android:textSize="34sp"
        android:textColor="#4CAF50"
        android:textStyle="bold" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateSaveButton"
        android:layout_alignTop="@id/editNoteHeading"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_check_24"/>

    <EditText
        android:id="@+id/updateTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="@color/white"
        android:hint="Doktor Bilgisi"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="#4CAF50"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/updateContentEditText"
        android:layout_below="@+id/updateTitleEditText"
        android:layout_marginTop="12dp"
        android:gravity="top"
        android:hint="Yorum Ekle"
        android:background="#8BC34A"
        android:padding="12dp"
        android:textSize="20sp" />





</RelativeLayout>